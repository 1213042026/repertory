<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<constant name="struts.ui.theme" value="simple" /> 
	<package name="repertory" namespace="/repertory" extends="struts-default">
        <action name="login" class="com.ms.action.UserAction">
			<result name="error">/login.jsp</result>
			<result name="success" type="redirect">/main.jsp</result>
		</action>
		<action name="customer" class="com.ms.action.CustomerAction">
		</action>
		<action name="mail" class="com.ms.action.MailAction">
		    <result name="searchMail">/view/indexTemp.jsp</result>
		</action>
		<action name="mailtype" class="com.ms.action.MailTypeAction">
		</action>
		<action name="indb" class="com.ms.action.IndbAction">
		</action>
		<action name="outdb" class="com.ms.action.OutdbAction">
		</action>
		<action name="stock" class="com.ms.action.StockAction">
		</action>
    </package>
</struts>
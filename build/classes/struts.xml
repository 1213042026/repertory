<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<package name="kucunManage" namespace="/kucunManage" extends="struts-default">
	    <action name="goindex" class="com.zhuxiaoxuan.action.IndexAction">
	        <result name="index">/view/indexTemp.jsp</result>
	    </action>
        <action name="login" class="com.zhuxiaoxuan.action.UserAction">
			<result name="error">/login.jsp</result>
			<result name="success" type="redirect">/main.jsp</result>
		</action>
		<action name="customer" class="com.zhuxiaoxuan.action.CustomerAction">
		</action>
		<action name="mail" class="com.zhuxiaoxuan.action.MailAction">
		    <result name="searchMail">/view/indexTemp.jsp</result>
		</action>
		<action name="mailtype" class="com.zhuxiaoxuan.action.MailTypeAction">
		</action>
		<action name="indb" class="com.zhuxiaoxuan.action.IndbAction">
		</action>
		<action name="outdb" class="com.zhuxiaoxuan.action.OutdbAction">
		</action>
		<action name="stock" class="com.zhuxiaoxuan.action.StockAction">
		</action>
    </package>
    <package name="kucunManage2" namespace="/kucunManage2" extends="jfreechart-default">
	    <action name="barChart" class="com.zhuxiaoxuan.action.BarChartAction">
	       <result name="success" type="chart">
			   <param name="value">chart</param>
			   <param name="type">png</param>
			   <param name="width">700</param>
			   <param name="height">500</param>
			</result>
	    </action>
	</package>
</struts>